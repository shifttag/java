package e_Chapter04;

// 축구 선수 클래스 작성
// FootballPlayer 클래스 작성

// 클래스 필드
// : 선수 이름(name), 포지션(position), 팀 이름(team), 골 수(goals)

// 선수 정보를 출력하는 메서드
// : displayInfo() - 반환 x
// : name, position, team, goals
class FootballPlayer{
	String name;
	String position;
	String team;
	int goals;
//		자동 줄 바꿈
//		: window > Editor > Toggle Word Wrap
//		: alt + shift + y
	void displayInfo(){
		System.out.println("선수 이름 : " + name + ", 포지션 : " + position + ", 팀 이름 : " + team + ", 골 수 : " + goals);
	}
	FootballPlayer(String name, String position, String team, int goals){
		this.name = name;
		this.position = position;
		this.team = team;
		this.goals = goals;
	}
}
public class Object06 {

	public static void main(String[] args) {
		// FootballPlayer 클래스를 사용한 player1 객체(인스턴스) 생성
		FootballPlayer player1 = new FootballPlayer();
		player1.displayInfo(); 		// 선수 정보 출력
	}

}
