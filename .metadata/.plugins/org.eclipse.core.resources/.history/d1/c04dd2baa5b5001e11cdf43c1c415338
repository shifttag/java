package k_Chapter10;

interface Flyable{
	int MAX_SPEED = 100;		// public static final 생략
	void fly();					// public abstract 생략
	
	// 디폴트 메서드
	default void land() {
		System.out.println("Landing");
	}
	
	// 정적 메서드
	static int geWingCount() {
		return 2;
	}
}

class Bird implements Flyable{
	public void fly() {
		// 인터페이스에 정의된 상수 사용 가능
		System.out.println("Bird is flying at speed" + MAX_SPEED);
	}
	
	@Override
	public void land() {
		System.out.println("...Laning...");
	}
}

public class C_Interface02 {
	public static void main(String[] args) {
		Bird bird = new Bird();
		
		// bird의 구현 메서드
		bird.land();
		bird.fly();
	}
}
