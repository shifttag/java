package f_Chapter05;

// Game 클래스
// 한 명의 사용자가 게임을 진행 할 때 마다 점수가 쌓이는 로직

class Game{
	// 모든 게임 인스턴스에서 공유될 static 변수 선언
	static int totalScore = 0;
	
	// 게임 점수를 증가시키는 메서드
	// int score 
	// : 지역 변수
	// - addScore 메서드가 호출 될 때 마다 다른 값을 가지며
	// - 해당 메서드 내에서만 사용 가능
	void addScore(int score) {
		totalScore += score;
		System.out.println("Current Total Score : " + totalScore);
	}
}
public class Object03 {

	public static void main(String[] args) {
		Game game1 = new Game(); // 첫 번째 게임
		Game game2 = new Game(); // 두 번째 게임

		game1.addScore(200);
		game2.addScore(100);
		
		System.out.println("현재 경험치 : " + Game.totalScore);
	}

}
